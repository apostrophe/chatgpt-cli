echo "===================================="
echo "          Argument List            "
echo "===================================="
for arg in "$@"; do
    echo " - $arg"
done
echo "===================================="

# Call the Python application with the arguments
python src/callChatGpt.py "$@"

# Summary of arguments
echo "Total arguments provided: $#"


